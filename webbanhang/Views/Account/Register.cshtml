@using webbanhang.Models.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<h2>Đăng ký</h2>
<form asp-action="Register" method="post">
    <div class="form-group">
        <label>Họ tên</label>
        <input asp-for="HoTen" class="form-control" />
    </div>
    <div class="form-group">
        <label>Địa chỉ</label>
        <input asp-for="DiaChi" class="form-control" />
    </div>
    <div class="form-group">
        <label>Số điện thoại</label>
        <input asp-for="DienThoai" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tên đăng nhập</label>
        <input asp-for="TenTaiKhoan" class="form-control" />
    </div>
    <div class="form-group">
        <label>Mật khẩu</label>
        <input asp-for="MatKhau" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label>Khu vực</label>
        <select asp-for="MaKhuVuc" class="form-control" asp-items="ViewBag.KhuVuc"></select>
    </div>
    <button type="submit" class="btn btn-primary">Đăng ký</button>
</form>
