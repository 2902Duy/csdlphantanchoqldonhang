@using webbanhang.Models.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h4><i class="fas fa-user-plus"></i> Đăng ký tài khoản</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label class="form-label">Họ tên</label>
                            <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên đầy đủ" />
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Địa chỉ</label>
                            <input asp-for="DiaChi" class="form-control" placeholder="Số nhà, đường, phường..." />
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Số điện thoại</label>
                            <input asp-for="DienThoai" class="form-control" placeholder="0989xxxxxx" />
                            <span asp-validation-for="DienThoai" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="you@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tên đăng nhập</label>
                            <input asp-for="TenTaiKhoan" class="form-control" placeholder="Tên đăng nhập" />
                            <span asp-validation-for="TenTaiKhoan" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mật khẩu</label>
                            <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Xác nhận mật khẩu</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <select asp-for="MaKhuVuc" class="form-select" asp-items="ViewBag.KhuVuc">
                                <option value="">-- Chọn Tỉnh/TP --</option>
                            </select>
                            <span asp-validation-for="MaKhuVuc" class="text-danger"></span>
                        </div>


                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-user-plus"></i> Đăng ký
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
